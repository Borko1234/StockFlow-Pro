@model StockFlowPro.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
    Layout = "_Layout";
}

<div class="container">
    <h2>Create New Employee</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Position" class="control-label"></label>
                    <select asp-for="Position" class="form-control">
                        <option value="OfficeWorker">Office Worker</option>
                        <option value="Scanner">Scanner</option>
                        <option value="Packer">Packer</option>
                    </select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <hr />
                <h4>User Account</h4>
                <div class="form-check mb-3">
                    @if (ViewBag.CreateLogin == null || (bool)ViewBag.CreateLogin)
                    {
                        <input type="checkbox" class="form-check-input" id="createLogin" name="createLogin" value="true" checked />
                    }
                    else
                    {
                        <input type="checkbox" class="form-check-input" id="createLogin" name="createLogin" value="true" />
                    }
                    <label class="form-check-label" for="createLogin">Create Login Account (@@stockflow.pro)</label>
                </div>

                <div id="loginFields">
                    <div class="form-group mb-3">
                        <label>Email (Username)</label>
                        <input type="text" id="emailInput" name="email" class="form-control" value="@ViewBag.Email" />
                    </div>
                    <div class="form-group mb-3">
                        <label>Password</label>
                        <input type="password" id="passwordInput" name="password" class="form-control" />
                    </div>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const createLoginCheckbox = document.getElementById("createLogin");
        const loginFields = document.getElementById("loginFields");
        const emailInput = document.getElementById("emailInput");
        const passwordInput = document.getElementById("passwordInput");

        const toggleLoginFields = () => {
            const enabled = createLoginCheckbox && createLoginCheckbox.checked;
            if (loginFields)
            {
                loginFields.style.display = enabled ? "block" : "none";
            }
            if (emailInput)
            {
                emailInput.disabled = !enabled;
            }
            if (passwordInput)
            {
                passwordInput.disabled = !enabled;
            }
        };

        if (createLoginCheckbox)
        {
            createLoginCheckbox.addEventListener("change", toggleLoginFields);
            toggleLoginFields();
        }
    </script>
}
