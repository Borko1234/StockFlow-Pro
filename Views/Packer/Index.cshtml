@model List<StockFlowPro.Models.Order>

@{
    ViewData["Title"] = "Packer Dashboard";
}

<div class="container mt-4">
    <h2>Packer Dashboard</h2>
    <p class="text-muted">Orders ready for packing (Status: Prepared)</p>

    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Facility</th>
                    <th>Total Items</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Facility?.Name</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.CreatedAt.ToString("g")</td>
                        <td>
                            <button class="btn btn-primary btn-sm">View Details</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No orders to pack at the moment.</div>
    }
</div>
