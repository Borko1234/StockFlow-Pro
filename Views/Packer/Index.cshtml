@model List<StockFlowPro.Models.Order>

@{
    ViewData["Title"] = ViewData["DashboardTitle"] ?? "Today's Orders";
}

<div class="container mt-4">
    <h2>@(ViewData["DashboardTitle"] ?? "Today's Orders")</h2>
    <p class="text-muted">@(ViewData["DashboardSubtitle"] ?? "Orders ready for packing")</p>

    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Facility</th>
                    <th>Total Items</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Facility?.Name</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No orders to pack at the moment.</div>
    }
</div>
