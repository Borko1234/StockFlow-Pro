@model StockFlowPro.ViewModels.ScannerViewModel

@{
    ViewData["Title"] = "Scanner Station";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-upc-scan"></i> Scanner Station</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Scan" method="post" class="mb-4">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text" id="scan-icon">Order ID</span>
                            <input type="number" name="orderId" class="form-control" placeholder="Scan or Enter Order ID..." aria-label="Order ID" aria-describedby="scan-icon" autofocus required>
                            <button class="btn btn-success" type="submit">Scan Order</button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
                        </div>
                    }

                    @if (Model.CurrentOrder != null)
                    {
                        <div class="card mt-3 border-success">
                            <div class="card-header bg-success text-white">
                                <strong>Order Details: #@Model.CurrentOrder.Id</strong>
                            </div>
                            <div class="card-body">
                                <p><strong>Status:</strong> @Model.CurrentOrder.OrderStatus</p>
                                <p><strong>Total Items:</strong> @Model.CurrentOrder.OrderItems.Sum(i => i.Quantity)</p>
                                <hr />
                                <h5>Items:</h5>
                                <ul class="list-group">
                                    @foreach (var item in Model.CurrentOrder.OrderItems)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @item.Product.Name
                                            <span class="badge bg-primary rounded-pill">x @item.Quantity</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
