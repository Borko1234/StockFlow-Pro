@model StockFlowPro.ViewModels.ScannerViewModel

@{
    ViewData["Title"] = "Scanner Station";
}

<div class="container">
    <h2 class="mb-4">Scanner Station</h2>

    <!-- Search Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-auto">
                    <label for="orderId" class="col-form-label">Order ID:</label>
                </div>
                <div class="col-auto">
                    <input type="number" class="form-control" id="orderId" name="orderId" value="@Model.OrderId" placeholder="Enter Order ID">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
            }
        </div>
    </div>

    @if (Model.CurrentOrder != null)
    {
        <!-- Order Details & Assignment -->
        <div class="card">
            <div class="card-header bg-success text-white">
                Order Found: #@Model.CurrentOrder.Id
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Facility</dt>
                    <dd class="col-sm-9">@Model.CurrentOrder.Facility?.Name</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.CurrentOrder.OrderStatus</dd>

                    <dt class="col-sm-3">Total Amount</dt>
                    <dd class="col-sm-9">@Model.CurrentOrder.TotalAmount.ToString("C")</dd>
                </dl>

                <hr />

                <form asp-action="Assign" method="post">
                    <input type="hidden" asp-for="OrderId" value="@Model.CurrentOrder.Id" />
                    
                    <div class="mb-3">
                        <label asp-for="SelectedEmployeeId" class="form-label">Select Employee</label>
                        <select asp-for="SelectedEmployeeId" class="form-select" id="selectedEmployeeId" asp-items="@(new SelectList(Model.Employees, "Id", "FullName"))">
                            <option value="">-- Select Employee --</option>
                        </select>
                        <span asp-validation-for="SelectedEmployeeId" class="text-danger"></span>
                        <div id="employeeSelectError" class="text-danger mt-2 d-none">Select an employee to continue.</div>
                    </div>

                    <button type="submit" id="assignScanBtn" class="btn btn-success btn-lg" disabled>Assign & Start Scanning</button>
                </form>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var select = document.getElementById('selectedEmployeeId');
            var button = document.getElementById('assignScanBtn');
            var error = document.getElementById('employeeSelectError');
            if (!select || !button) return;

            function updateState() {
                var hasValue = select.value && select.value.trim() !== '';
                button.disabled = !hasValue;
                if (hasValue) {
                    error.classList.add('d-none');
                    select.classList.remove('is-invalid');
                }
            }

            updateState();

            select.addEventListener('change', updateState);

            button.form.addEventListener('submit', function (e) {
                if (button.disabled) {
                    e.preventDefault();
                    error.classList.remove('d-none');
                    select.classList.add('is-invalid');
                }
            });
        })();
    </script>
}
